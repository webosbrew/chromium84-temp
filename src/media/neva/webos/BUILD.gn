import("//build/config/linux/pkg_config.gni")
import("//neva/neva.gni")

if (webos_product_type == "signage" || webos_product_type == "tv") {
  pkg_config("media_base_webos_config") {
    packages = [
      "Acb",
      "libpf-1.0",
      "libplayerAPIs",
      "umedia_api",
    ]
  }
}

if (enable_lg_svp) {
  pkg_config("media_base_webos_svp") {
    packages = [
      "svp_inband_serializer",
    ]
  }

  static_library("svp_util") {
    sources = [
      "svp_util.cc",
      "svp_util.h",
    ]

    configs -= [
      "//build/config/compiler:no_rtti",
    ]

    configs += [
      "//build/config/compiler:rtti",
      ":media_base_webos_svp"
    ]

    deps = [ "//base" ]
  }
}
